{
  "name": "template-webpack-typescript",
  "version": "1.0.0",
  "private": true,
  "description": "A Template to transpile TypeScript to JavaScript using webpack",
  "main": "dist/index.js",
  "config": {
    "awsRegion": "eu-central-1",
    "awsProfile": "",
    "bucketName": "template-webpack-typescript-lambda",
    "stackName": "TemplateWebpackTypeScriptLambda",
    "functionName": "TemplateWebpackTypeScriptLambda",
    "apiGateway": false,
    "apiDomain": "",
    "apiSubDomain": ""
  },
  "scripts": {
    "build": "webpack",
    "build:production": "npm run build --production",
    "watch": "npm run build -- --watch",

    "cf:create": "ts-node scripts/cloudFormationCreateBucket.ts",
    "cf:update": "ts-node scripts/cloudFormationUpdateBucket.ts",
    "cf:delete": "ts-node scripts/cloudFormationDeleteBucket.ts",

    "s3:create": "ts-node scripts/s3CreateBucket.ts",
    "s3:delete": "ts-node scripts/s3DeleteBucket.ts",

    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "example",
    "sample",
    "template",
    "ts",
    "tslint",
    "typescript",
    "webpack",
    "webpack4"
  ],
  "author": {
    "name": "Tamino Martinius",
    "url": "https://github.com/tamino-martinius/"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.7",
    "@types/aws-sdk": "^2.7.0",
    "@types/jszip": "^3.1.4",
    "@types/node": "^10.3.6",
    "@types/webpack": "^4.4.3",
    "aws-sdk": "^2.263.1",
    "clean-webpack-plugin": "^0.1.19",
    "jszip": "^3.1.5",
    "ts-loader": "^4.4.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^2.9.2",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  }
}
